<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<?import com.lynden.gmapsfx.GoogleMapView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../css/style.css"
            fx:controller="controller.MainScreenController">

   <children>
      <BorderPane fx:id="border" opacity="0.8">
         <left>
            <VBox prefHeight="400.0" prefWidth="125.0">
               <Button fx:id="editProfile" alignment="TOP_CENTER" mnemonicParsing="false" prefHeight="31.0" prefWidth="123.0" onAction="#handleEdit" text="Edit Profile" styleClass="mainButton"/>
               <Button fx:id="submitReports" alignment="TOP_CENTER" mnemonicParsing="false" prefHeight="31.0" prefWidth="123.0"  onAction="#handleSubmitReports" text="Submit Report" styleClass="mainButton"/>
                <Button fx:id="submitSourceReport" alignment="TOP_CENTER"
                        mnemonicParsing="false" prefHeight="31.0"
                        prefWidth="123.0" onAction="#handleSubmitSourceReport"
                        text="   -Source Report" styleClass="mainButton"
                        visible="false" managed="false"/>
                <Button fx:id="submitQualityReport" alignment="TOP_CENTER"
                        mnemonicParsing="false" prefHeight="31.0"
                        prefWidth="123.0"
                        onAction="#handleSubmitQualityReport"
                        text="   -Quality Report" styleClass="mainButton"
                        visible="false" managed="false"/>
                <Button fx:id="viewReports" alignment="TOP_CENTER"
                        mnemonicParsing="false" prefHeight="31.0"
                        prefWidth="123.0" onAction="#handleViewReports"
                        text="View Reports" styleClass="mainButton"/>
                <Button fx:id="viewSourceReports" alignment="TOP_CENTER"
                        mnemonicParsing="false" prefHeight="31.0"
                        prefWidth="123.0" onAction="#handleViewSourceReports"
                        text="   -Source Reports" styleClass="mainButton"
                        visible="false" managed="false"/>
                <Button fx:id="viewQualityReports" alignment="TOP_CENTER"
                        mnemonicParsing="false" prefHeight="31.0"
                        prefWidth="123.0" onAction="#handleViewQualityReports"
                        text="   -Quality Reports" styleClass="mainButton"
                        visible="false" managed="false"/>
                <Button fx:id="viewHistoricalReport" alignment="TOP_CENTER"
                        mnemonicParsing="false" prefHeight="31.0"
                        prefWidth="123.0"
                        onAction="#handleViewHistoricalReport"
                        text="   -Historical Report" styleClass="mainButton"
                        visible="false" managed="false"/>
               <Button fx:id="logout" alignment="TOP_CENTER"
                       mnemonicParsing="false" prefHeight="31.0"
                       prefWidth="123.0" onAction="#handleLogout" text="Logout"
                       styleClass="mainButton"/>
            </VBox>
         </left>
         <right>
             <AnchorPane fx:id="anchor" prefHeight="400.0" prefWidth="475.0">
                 <GoogleMapView fx:id="mapView" prefHeight="400.0" prefWidth="475.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0.0"/>
                 <Button fx:id="addReportButton" styleClass="addButton" AnchorPane.rightAnchor="50" AnchorPane.bottomAnchor="50" />
             </AnchorPane>
         </right>
      </BorderPane>
   </children>
</AnchorPane>

